{
  "name": "prissleague-unified",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo regroupant le bot Discord matchmaking, l'app web de classement et le bot de synchronisation de r√¥les.",
  "workspaces": [
    "web",
    "web/discord-bot"
  ],
  "scripts": {
    "install:all": "npm install --workspaces --include-workspace-root && pip install -r discord-bot/requirements.txt",
    "start:web": "npm run start --workspace web",
    "start:bot": "python3 discord-bot/run.py",
    "start:all": "concurrently \"npm run start:web\" \"npm run start:bot\"",
    "dev": "npm run dev --workspace web",
    "migrate:db": "python3 discord-bot/smart_migration.py",
    "lint": "npm run lint --workspace web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  }
}
